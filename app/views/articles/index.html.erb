<h1>All Articles</h1>

<ul class="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: "article-title", id: "article-#{article.id}" %>
    </li>
  <% end %>
</ul>

<%= link_to "Create new article", new_article_path, class: "new_article" %>